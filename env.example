# Environment Configuration
# Copy this file to .env.local and fill in your values

# Application Configuration
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME="Taopik Hidayat Portfolio"

# Security Configuration
API_RATE_LIMIT_MAX=100
API_RATE_LIMIT_WINDOW=900000

# CORS Configuration
NEXT_PUBLIC_ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Optional: Analytics (uncomment if needed)
# NEXT_PUBLIC_GA_ID=your-google-analytics-id
# NEXT_PUBLIC_GTM_ID=your-google-tag-manager-id

# Optional: Email Configuration (uncomment if you want to enable email sending)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password
# SMTP_FROM=your-email@gmail.com

# Optional: Authentication (uncomment if needed)
# NEXTAUTH_SECRET=your-secret-key
# NEXTAUTH_URL=http://localhost:3000
